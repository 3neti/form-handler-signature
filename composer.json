{
    "name": "3neti/form-handler-signature",
    "description": "Signature capture handler for form flow system",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "3neti",
            "email": "info@3neti.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "3neti/form-flow": "^1.0",
        "spatie/laravel-data": "^4.0",
        "illuminate/support": "^11.0 || ^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.3",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.0",
        "inertiajs/inertia-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "LBHurtado\\FormHandlerSignature\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LBHurtado\\FormHandlerSignature\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LBHurtado\\FormHandlerSignature\\SignatureHandlerServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
